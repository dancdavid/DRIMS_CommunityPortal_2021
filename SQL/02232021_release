ALTER TABLE `drims_dev`.`org_relationships`
  MODIFY `id` int(11) NOT NULL AUTO_INCREMENT;

ALTER TABLE `drims_dev`.`org_relationships` CHANGE `level_1` `level_1` TINYTEXT   NULL DEFAULT NULL;
ALTER TABLE `drims_dev`.`org_relationships` CHANGE `partner_type` `partner_type` TINYTEXT  NULL DEFAULT NULL;




CREATE OR REPLACE VIEW  `drims_dev`.cp_search_orgs_and_locations AS
select `drims_dev`.`org_information`.`cp_parent_child` AS `id`,`drims_dev`.`org_information`.`cp_parent_child` AS `agency_id`,
(case when (`drims_dev`.`org_information`.`cp_parent_agency` = -(1)) then `drims_dev`.`org_information`.`cp_parent_child` else `drims_dev`.`org_information`.`cp_parent_agency` end) AS `parent_agency`,
`drims_dev`.`org_information`.`name` AS `agency_name`,`drims_dev`.`org_information`.`level_1` AS `level_1`,`drims_dev`.`org_information`.`address` AS `agency_address`,
`drims_dev`.`org_information`.`city` AS `agency_city`,`drims_dev`.`org_information`.`state` AS `agency_state`,`drims_dev`.`org_information`.`zipcode` AS `agency_zipcode`,
`drims_dev`.`org_information`.`org_phone` AS `agency_telephone`,`drims_dev`.`org_information`.`status` AS `status`,
`drims_dev`.`org_information`.`cp_partner_type` AS `partner_type`,'ORG' AS `org_type` from `drims_dev`.`org_information`
union
select concat('L-',`ab`.`id`) AS `id`,(select `cda`.`cp_parent_child` AS `agency_id` from `drims_dev`.`org_information` `cda`
where (`ab`.`agency_id` = `cda`.`cp_parent_child`) limit 1) AS `agency_id`,
(select (case when (`cda`.`cp_parent_agency` = -(1)) then `cda`.`cp_parent_child` else `cda`.`cp_parent_agency` end) from `drims_dev`.`org_information` `cda`
where (`ab`.`agency_id` = `cda`.`cp_parent_child`) limit 1) AS `parent_agency`,`ab`.`location_name` AS `location_name`,
`ab`.`level_1` AS `level_1`,`ab`.`address` AS `address`,`ab`.`city` AS `city`,`ab`.`state` AS `state`,`ab`.`zip_code` AS `zip_code`,
`ab`.`phone` AS `phone`,`ab`.`status` AS `status`,(select `cda`.`cp_partner_type` AS `partner_type` from `drims_dev`.`org_information` `cda`
where (`ab`.`agency_id` = `cda`.`cp_parent_child`) limit 1) AS `partner_type`,'LOCATION' AS `org_type` from `drims_dev`.`cp_directory_agency_locations` `ab`
union
select `drims_dev`.`org_relationships`.`member_org_id` AS `id`,`drims_dev`.`org_relationships`.`member_org_id` AS `agency_id`, `drims_dev`.`org_relationships`.`primary_org_id` AS `parent_agency`,
`drims_dev`.`org_information`.`name` AS `agency_name`,`drims_dev`.`org_information`.`level_1` AS `level_1`,`drims_dev`.`org_information`.`address` AS `agency_address`,
`drims_dev`.`org_information`.`city` AS `agency_city`,`drims_dev`.`org_information`.`state` AS `agency_state`,`drims_dev`.`org_information`.`zipcode` AS `agency_zipcode`,
`drims_dev`.`org_information`.`org_phone` AS `agency_telephone`,`drims_dev`.`org_information`.`status` AS `status`,
`drims_dev`.`org_information`.`cp_partner_type` AS `partner_type`,'ORG' AS `org_type` from `drims_dev`.`org_information`
join `drims_dev`.org_relationships on `drims_dev`.`org_information`.`id` = `drims_dev`.org_relationships.id where is_primary = '0'